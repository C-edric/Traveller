
{%- for field in armors_fields %}
        <div class="input-group mt-1">
          <span class="input-group-text justify-content-end text-wrap col-4 armor-label" id="{{ field.id }}-label">{{ field.name.capitalize() }}</span>
          <div class="col-4"><input type="text" class="form-control text-start armor-desc" id="{{ field.id }}-desc" value="{{ field.description }}" readonly></div>
          <div class="col-2"><input type="text" class="form-control text-end armor-weight" id="{{ field.id }}-weight" value="{{ field.weight }}" readonly></div>
          <div class="col-2"><input type="text" class="form-control text-end armor-price" id="{{ field.id }}-price" value="{{ field.price }}" readonly></div>
        </div>
{%- endfor %}